{
  "name": "opencode-rabit",
  "version": "0.1.0",
  "description": "OpenCode MCP plugin providing Rabit Burrow Traversal (RBT) tools for AI agents",
  "keywords": [
    "opencode",
    "mcp",
    "rabit",
    "burrow",
    "warren",
    "traversal",
    "rbt",
    "agent",
    "ai",
    "plugin"
  ],
  "homepage": "https://github.com/itlackey/rabit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/itlackey/rabit.git",
    "directory": "packages/opencode-rabit"
  },
  "bugs": {
    "url": "https://github.com/itlackey/rabit/issues"
  },
  "license": "CC-BY-4.0",
  "author": "Rabit Contributors",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "opencode-rabit": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run clean && bun build ./src/index.ts --outdir=dist --target=bun && bun run build:types",
    "build:types": "bun x tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bun x tsc --noEmit",
    "prepublishOnly": "bun run build && bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@rabit/client": "workspace:*",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
