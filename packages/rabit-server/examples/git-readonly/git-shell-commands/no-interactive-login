#!/bin/sh
# Disable interactive SSH login
# Users can only execute git commands

printf '%s\n' "Welcome to the Rabit Git Server (read-only)"
printf '%s\n' ""
printf '%s\n' "This server provides read-only Git access to burrows."
printf '%s\n' "Interactive shell access is disabled."
printf '%s\n' ""
printf '%s\n' "Available commands:"
printf '%s\n' "  git clone ssh://git@<host>:<port>/srv/git/<repo>.git"
printf '%s\n' "  git fetch"
printf '%s\n' "  git pull"
printf '%s\n' ""
printf '%s\n' "Push access is disabled on this server."
exit 128
