{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "fwdslsh.dev/rabit/schemas/0.3.0/warren",
  "title": "Rabit Warren",
  "description": "JSON Schema for .warren.json registry files per Rabit v0.3.0 specification",
  "type": "object",
  "required": ["specVersion", "kind"],
  "additionalProperties": true,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema URI for validation"
    },
    "specVersion": {
      "type": "string",
      "description": "Specification version identifier",
      "const": "fwdslsh.dev/rabit/schemas/0.3.0/warren"
    },
    "kind": {
      "type": "string",
      "description": "Document type",
      "const": "warren"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the warren"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "RFC 3339 timestamp of last update"
    },
    "baseUri": {
      "type": "string",
      "format": "uri-reference",
      "description": "Base URI for resolving relative paths"
    },
    "burrows": {
      "type": "array",
      "description": "Array of burrow references",
      "items": {
        "$ref": "#/$defs/burrowReference"
      }
    },
    "warrens": {
      "type": "array",
      "description": "Array of warren references (federation)",
      "items": {
        "$ref": "#/$defs/warrenReference"
      }
    },
    "extensions": {
      "type": "object",
      "description": "Vendor/plugin-specific data",
      "additionalProperties": true
    }
  },
  "anyOf": [
    { "required": ["burrows"] },
    { "required": ["warrens"] }
  ],
  "$defs": {
    "burrowReference": {
      "type": "object",
      "description": "Reference to a burrow",
      "required": ["id", "uri"],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string",
          "description": "Stable identifier",
          "minLength": 1
        },
        "uri": {
          "type": "string",
          "description": "Location of the burrow root"
        },
        "title": {
          "type": "string",
          "description": "Human-readable title"
        },
        "description": {
          "type": "string",
          "description": "Brief description"
        },
        "tags": {
          "type": "array",
          "description": "Categorization tags",
          "items": {
            "type": "string"
          }
        },
        "priority": {
          "type": "number",
          "description": "Higher values = more prominent in menus"
        }
      }
    },
    "warrenReference": {
      "type": "object",
      "description": "Reference to another warren (federation)",
      "required": ["id", "uri"],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string",
          "description": "Stable identifier",
          "minLength": 1
        },
        "uri": {
          "type": "string",
          "description": "Location of the warren"
        },
        "title": {
          "type": "string",
          "description": "Human-readable title"
        },
        "description": {
          "type": "string",
          "description": "Brief description"
        }
      }
    }
  }
}
