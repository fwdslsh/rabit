{
  "name": "rabit",
  "version": "0.4.0",
  "private": true,
  "description": "Rabit Burrow Traversal (RBT) - A specification for publishing agent-friendly content spaces",
  "keywords": [
    "rabit",
    "burrow",
    "warren",
    "traversal",
    "rbt",
    "agent",
    "ai",
    "content",
    "git",
    "manifest",
    "monorepo"
  ],
  "homepage": "https://github.com/fwdslsh/rabit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/fwdslsh/rabit.git"
  },
  "bugs": {
    "url": "https://github.com/fwdslsh/rabit/issues"
  },
  "license": "CC-BY-4.0",
  "author": "Rabit Contributors",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "bun run --filter '*' clean",
    "dev:client": "bun run --filter @fwdslsh/rabit-client dev",
    "dev:mcp": "bun run --filter rabit-mcp dev"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
